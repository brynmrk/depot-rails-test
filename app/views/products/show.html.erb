<div id="show_product" class="table col-md-12 col-sm-12 col-xs-12">
  <h1 class="col-md-12 col-sm-12 col-xs-12"><%= @product.title %> Details</h1>
  <div class="product_details" style="font-size: larger;">
    <span class="product_image col-md-2 col-sm-3 col-xs-12">
      <%= image_tag(@product.image_url, style: 'border: 1px solid black;') %>
    </span>
    <span class="product_title col-md-10 col-md-offset-0 col-sm-9 col-sm-offset-0 col-xs-12">
      <strong>Title:</strong>
      <%= @product.title %>
    </span>
    <span class="product_category col-md-10 col-md-offset-0 col-sm-9 col-sm-offset-0 col-xs-12">
      <strong>Category:</strong>
      <%= @product.category.name%>
    </span>
    <span class="product_description col-md-10 col-md-offset-0 col-sm-9 col-sm-offset-0 col-xs-12" style="text-align: justify;">
      <strong>Description:</strong>
      <%= @product.description %>
    </span>
    <p class="product_price col-md-10 col-md-offset-0 col-sm-9 col-sm-offset-0 col-xs-9 col-xs-offset-0">
      <strong>Price:</strong>
      <%= sprintf("$%0.02f", @product.price)  %>
    </p>
  </div>
  <div class="button-action table col-md-12 col-md-offset-2 col-sm-12 col-sm-offset-3 col-xs-12" >
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary btn-md col-md-1 col-sm-1 col-xs-2', style: 'margin-right: 15px;' %>
      <% else %>
        <%= button_to t('.add_cart'), line_items_path(product_id: @product), remote: true, class: 'btn btn-primary btn-md col-md-1 col-sm-1 col-xs-2', style: 'margin-right: 15px;' %>
      <% end %>
    <% end %>
    <%= link_to 'Back', products_path, class: 'btn btn-primary btn-md col-md-1 col-sm-1 col-xs-2' %>
  </div>
</div>
