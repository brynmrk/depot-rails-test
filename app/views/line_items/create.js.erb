if ($('#cart ul.row div ul').length >= 1) { $('#cart').show('blind', 1000); }

$('#cart').html("<%= escape_javascript render(@cart) %>");

if ($('#cart ul.row div ul').length <= 1) { $('#cart').hide('blind', 1000); }

$('#current_item').css({'background-color':'#7f8c8d'}).animate({'background-color':'white'}, 1000);
