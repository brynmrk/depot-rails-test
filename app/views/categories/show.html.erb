<div id="show_category" class="table col-md-12 col-sm-12 col-xs-12">
  <h1 class="col-md-10 col-sm-10 col-xs-10"><%= @category.name %> Details</h1>
  <div class="category_title col-md-10 col-sm-10 col-xs-10">
    <p>
      <strong>Name:</strong>
      <%= @category.name %>
    </p>
  </div>
    <div class="category_description col-md-10 col-sm-10 col-xs-10">
    <p style="text-align: justify;">
      <strong>Description:</strong>
      <%= @category.description %>
    </p>
  </div>
  <div class="button-action table col-md-12 col-sm-12 col-xs-12" >
    <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-primary btn-md col-md-1 col-sm-2 col-xs-3', style: 'margin-right: 15px;' %>
    <%= link_to 'Back', categories_path, class:'btn btn-primary btn-md col-md-1 col-sm-2 col-xs-3' %>
  </div>
</div>
