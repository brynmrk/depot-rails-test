<div class="row centered-form">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
    		<h2 class="panel-title"></h2>
 			</div>
      <div class="panel-body">
        <%= form_for(@category) do |f| %>
          <% if @category.errors.any? %>
          <div id="error_explanation" class="col-md-12 col-sm-12 col-xs-12">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
            <% @category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
          <div class="row">
    			  <div class="col-xs-12 col-sm-12 col-md-12">
    					<div class="form-group field">
                <%= f.label :name %><br>
                <%= f.text_field :name, autofocus: true, placeholder: 'Name' %>
    					</div>
    				</div>
            <div class="form-group field col-md-12 col-sm-12 col-xs-12">
              <%= f.label :description %>
              <%= f.text_area :description, placeholder: 'Description', rows: 7, cols: 90, class: 'textarea_fix' %>
            </div>
    			</div>
          <div class="actions">
            <%= f.submit class:'btn btn-info btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
