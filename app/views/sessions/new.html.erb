<div class="depot_form">
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div class="login">
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="login">
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div class="login">
        <%= submit_tag "Login" class: "btn btn-default" %>
      </div>
    </fieldset>
  <% end %>
</div>
