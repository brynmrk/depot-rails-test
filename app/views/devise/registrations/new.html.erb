<div class="row centered-form">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <div class="panel panel-default">
      <div class="panel-heading">
    		<h2 class="panel-title">
          Sign up
          <%= link_to 'Back', users_sign_in_path, class:'btn btn-info col-md-offset-9', style: '' %>
        </h2>
 			</div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
    			  <div class="col-xs-12 col-sm-12 col-md-12">
    					<div class="form-group field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, placeholder: 'Name' %>
    					</div>
    				</div>
    			</div>
          <div class="form-group field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: false, placeholder: 'E-mail Address' %>
          </div>
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
    					<div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
              </div>
    				</div>
    				<div class="col-xs-6 col-sm-6 col-md-6">
    					<div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
    					</div>
    				</div>
          </div>
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-info' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
